@model List<CIBPOOT2.Models.Producto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de productos</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success bt-sm" asp-action="Producto_Detalle" asp-controller="Home" asp-route-idEmpleado="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Stock</th>
                    <th>Precio</th>
                    <th>Fecha de ingreso</th>
                    <th>Categoría</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Stock</td>
                        <td>@item.Precio</td>
                        <td>@item.FechaCreacion</td>
                        <td>@item.oCategoria.Nombre</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Producto_Detalle" asp-controller="Home" asp-route-IdProducto="@item.IdProducto">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-IdProducto="@item.IdProducto">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
